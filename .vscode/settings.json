{
  "css.validate": false,
  "editor.quickSuggestions": {
    "strings": true
  },
  "tailwindCSS.validate": true,
  "tailwindCSS.experimental.classRegex": ["const\\s+.*ClassName\\s*=\\s*\"([^']*)\""],
  "tailwindCSS.classAttributes": [
    "class",
    "className",
    "ngClass",
    "containerClasses",
    "buttonWrapperClasses",
    "buttonClasses",
    "contentClasses",
    "contentClassName"
  ],
  "files.exclude": {
    ".cache": true,
    "node_modules": true,
    "public": true
  },
}
